#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔨 Running pre-commit checks..."

# Run build to catch compilation issues
echo "📦 Building project..."
npm run build

if [ $? -ne 0 ]; then
  echo "❌ Build failed! Please fix compilation issues before committing."
  exit 1
fi

echo "✅ Build successful! Proceeding with commit..."
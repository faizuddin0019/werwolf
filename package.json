{
  "name": "werwolf",
  "version": "0.1.0",
  "description": "A web-based companion app for playing Werwolf remotely while keeping all conversation in your video call",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "deploy": "vercel --prod",
    "test:leave-game": "node test-leave-game.js",
    "test:quick": "node test-quick.js",
    "test:realtime": "node test-realtime-sync.js",
    "test:realtime:local": "TEST_BASE_URL=http://localhost:3000 node test-realtime-sync.js",
    "test:realtime:prod": "TEST_BASE_URL=https://wearwolf-theta.vercel.app node test-realtime-sync.js",
    "test:all": "npm run test:leave-game && npm run test:quick && npm run test:realtime",
    "test:ci": "./run-tests.sh all",
    "test:verify": "./run-tests.sh quick"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.57.4",
    "jotai": "^2.14.0",
    "lucide-react": "^0.544.0",
    "next": "15.5.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "zod": "^4.1.9"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
